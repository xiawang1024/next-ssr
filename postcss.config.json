{
    "plugins": [
      "postcss-flexbugs-fixes",
      [
        "postcss-preset-env",
        {
          "autoprefixer": {
            "flexbox": "no-2009"
          },
          "stage": 3,
          "features": {
            "custom-properties": false
          }
        }
      ],
      [
        "postcss-pxtorem",
        {
          "rootValue":75,
          "propList":["*"],
          "selectorBlackList" :["html"],
          "minPixelValue" :1.5,
          "mediaQuery":false,
          "exclude":"common"
        }
      ]
    ]
  }